                {{#each filters.parkType.options as |option|}}
                  <li>
                    {{input type="checkbox" class="field-parkType" name=option checked=(contains option selectedParkTypes) click=(action checkForUpdated 'parkType')}}
                    {{capitalize option}}
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>

